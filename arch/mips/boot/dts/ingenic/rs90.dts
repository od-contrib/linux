/dts-v1/;

#include "jz4725b.dtsi"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include <dt-bindings/display/ingenic,jz4740-drm.h>

/ {
	compatible = "retromini", "ingenic,jz4725b";
	model = "RetroMini";

	aliases {
		serial0 = &uart;
	};

	chosen {
		stdout-path = "serial0:57600n8";
	};

	board {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "simple-bus";
		ranges = <>;

		backlight: backlight {
			compatible = "pwm-backlight";
			pwms = <&pwm 3 40000 0>;

			brightness-levels = <0 16 32 48 64 80 96 112 128 144 160 176 192 208 224 240 255>;
			default-brightness-level = <12>;

			pinctrl-names = "default";
			pinctrl-0 = <&pins_pwm3>;

			power-supply = <&vcc>;
		};

		gpio-keys {
			compatible = "gpio-keys";
			#address-cells = <1>;
			#size-cells = <0>;

			autorepeat;

			button@0 {
				label = "D-pad up";
				linux,code = <KEY_UP>;
				gpios = <&gpc 10 GPIO_ACTIVE_LOW>;
				debounce-interval = <10>;
			};

			button@1 {
				label = "D-pad down";
				linux,code = <KEY_DOWN>;
				gpios = <&gpc 11 GPIO_ACTIVE_LOW>;
				debounce-interval = <10>;
			};

			button@2 {
				label = "D-pad left";
				linux,code = <KEY_LEFT>;
				gpios = <&gpb 31 GPIO_ACTIVE_LOW>;
				debounce-interval = <10>;
			};

			button@3 {
				label = "D-pad right";
				linux,code = <KEY_RIGHT>;
				gpios = <&gpd 21 GPIO_ACTIVE_LOW>;
				debounce-interval = <10>;
			};

			button@4 {
				label = "Button A";
				linux,code = <KEY_A>;
				gpios = <&gpc 31 GPIO_ACTIVE_LOW>;
				debounce-interval = <10>;
			};

			button@5 {
				label = "Button B";
				linux,code = <KEY_B>;
				gpios = <&gpc 30 GPIO_ACTIVE_LOW>;
				debounce-interval = <10>;
			};

/*
			button@6 {
				label = "Left shoulder button";
				linux,code = <KEY_TAB>;
				gpios = <&gpc 9 GPIO_ACTIVE_HIGH>;
				debounce-interval = <10>;
			};

			button@7 {
				label = "Right shoulder button";
				linux,code = <KEY_BACKSPACE>;
				gpios = <&gpc 12 GPIO_ACTIVE_LOW>;
				debounce-interval = <10>;
			};
			*/

			button@8 {
				label = "Start button";
				linux,code = <KEY_ENTER>;
				gpios = <&gpd 17 GPIO_ACTIVE_LOW>;
				debounce-interval = <10>;
			};
		};

		amp: audio-amp {
			compatible = "simple-audio-amplifier";
			enable-gpios = <&gpc 15 GPIO_ACTIVE_HIGH>;
		};

		sound-card {
			compatible = "simple-audio-card";

			simple-audio-card,name = "rs90-audio";
			simple-audio-card,format = "i2s";

			simple-audio-card,widgets =
				"Speaker", "Speaker",
				"Headphone", "Headphones";
			simple-audio-card,routing =
				"INL", "LHPOUT",
				"INR", "RHPOUT",
				"Headphones", "LHPOUT",
				"Headphones", "RHPOUT",
				"Speaker", "OUTL",
				"Speaker", "OUTR";

			simple-audio-card,hp-det-gpio = <&gpd 16 GPIO_ACTIVE_LOW>;
			simple-audio-card,aux-devs = <&amp>;

			simple-audio-card,bitclock-master = <&dai_codec>;
			simple-audio-card,frame-master = <&dai_codec>;

			dai_cpu: simple-audio-card,cpu {
				sound-dai = <&aic>;
			};

			dai_codec: simple-audio-card,codec {
				sound-dai = <&codec>;
			};

		};

		regulators {
			#address-cells = <1>;
			#size-cells = <0>;
			compatible = "simple-bus";

			vcc: regulator@0 {
				compatible = "regulator-fixed";

				regulator-name = "vcc";
				regulaor-min-microvolt = <3300000>;
				regulaor-max-microvolt = <3300000>;
				regulator-always-on;
			};
		};

		usb-phy {
			compatible = "usb-nop-xceiv";
			#phy-cells = <0>;

			clocks = <&cgu JZ4725B_CLK_UDC_PHY>;
			clock-names = "main_clk";
			vcc-supply = <&vcc>;
		};

		adc-keys {
			compatible = "adc-keys";
			io-channels = <&adc 0>;
			io-channel-names = "buttons";
			keyup-threshold-microvolt = <1400000>;
			poll-interval = <30>;
			autorepeat = <1>;

			left-shoulder {
				label = "Left shoulder button";
				linux,code = <KEY_TAB>;
				press-threshold-microvolt = <800000>;
			};
			button-select {
				label = "Select button";
				linux,code = <KEY_ESC>;
				press-threshold-microvolt = <1100000>;
			};
		};

		panel: panel {
			compatible = "sharp,ls020b1dd01d";

			backlight = <&backlight>;
			power-supply = <&vcc>;
		};
	};
};

&ext {
	clock-frequency = <12000000>;
};

&rtc_dev {
	system-power-controller;
};

&pinctrl {
	pins_mmc1: mmc1 {
		function = "mmc1";
		groups = "mmc1-1bit";
	};

	pins_uart: uart {
		function = "uart";
		groups = "uart-data";
	};

	pins_nemc: nemc {
		function = "nand";
		groups = "nand-cs1", "nand-cle-ale", "nand-fre-fwe";
	};

	pins_pwm3: pwm3 {
		function = "pwm3";
		groups = "pwm3";
		bias-disable;
	};

	pins_lcd: lcd {
		function = "lcd";
		groups = "lcd-8bit", "lcd-16bit", "lcd-special";
	};
};

&mmc0 {
	status = "disabled";
};

&mmc1 {
	bus-width = <1>;

	pinctrl-names = "default";
	pinctrl-0 = <&pins_mmc1>;

	cd-gpios = <&gpc 20 GPIO_ACTIVE_LOW>;
};

&uart {
	status = "disabled";

	pinctrl-names = "default";
	pinctrl-0 = <&pins_uart>;
};

&nemc {
	nandc: nand-controller@1 {
		compatible = "ingenic,jz4725b-nand";
		reg = <1 0 0x4000000>;

		#address-cells = <1>;
		#size-cells = <0>;

		ingenic,bch-controller = <&bch>;

		ingenic,nemc-tAS = <10>;
		ingenic,nemc-tAH = <5>;
		ingenic,nemc-tBP = <10>;
		ingenic,nemc-tAW = <15>;
		ingenic,nemc-tSTRV = <100>;

		pinctrl-names = "default";
		pinctrl-0 = <&pins_nemc>;

		rb-gpios = <&gpc 27 GPIO_ACTIVE_LOW>;

		nand@1 {
			reg = <1>;

			nand-ecc-step-size = <512>;
			nand-ecc-strength = <8>;
			nand-ecc-mode = "hw";
			nand-is-boot-medium;
			nand-on-flash-bbt;

			partitions {
				compatible = "fixed-partitions";
				#address-cells = <1>;
				#size-cells = <1>;

				partition@0 {
					label = "bootloader";
					reg = <0x0 0x20000>;
				};

				partition@20000 {
					label = "system";
					reg = <0x20000 0xffa0000>;
				};
			};
		};
	};
};

&cgu {
	assigned-clocks = <&cgu JZ4725B_CLK_RTC>;
	assigned-clock-parents = <&cgu JZ4725B_CLK_OSC32K>;
};

&timer {
	/* 750 kHz for the system timer and clocksource */
	assigned-clocks = <&tcu TCU_CLK_TIMER0>, <&tcu TCU_CLK_TIMER1>;
	assigned-clock-rates = <750000>, <750000>;
};

&lcd {
	pinctrl-names = "default";
	pinctrl-0 = <&pins_lcd>;

	ingenic,panel = <&panel>;
	ingenic,lcd-mode = <JZ_DRM_LCD_SPECIAL_TFT_2>;
};
